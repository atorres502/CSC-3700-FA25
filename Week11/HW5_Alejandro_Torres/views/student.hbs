<div class="d-flex align-items-center justify-content-between mb-3">
    <h1 class="h3 m-0">Students</h1>
    <a href="/student/new" class="btn btn-primary">Add Student</a>
</div>
{{#if noResults}}
    <div class="alert alert-warning mt-3">
        No students found.
    </div>
{{else}}
    <div class="card shadow-sm">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-striped table-hover align-middle m-0">
                    <thead class="table-light">
                    <tr>
                        <th>ID</th>
                        <th>First Name</th>
                        <th class="text-end">Last Name</th>
                        <th class="text-end">Major</th>
                        <th class="text-end">GPA</th>
                        <th class="text-end">Full Name</th>
                        <th class="text-center">Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {{#each students}}
                        <tr>
                            <td>{{StudentID}}</td>
                            <td class="fw-medium">{{FirstName}}</td>
                            <td class="text-end">{{LastName}}</td>
                            <td class="text-end">{{Major}}</td>
                            <td class="text-end">{{GPA}}</td>
                            <td class="text-end">{{FirstName}} {{LastName}}</td>
                            <td class="text-center">
                                <a href="/student/{{StudentID}}" class="btn btn-sm btn-outline-secondary">View</a>
                                <a href="/student/{{StudentID}}/edit" class="btn btn-sm btn-outline-primary me-1">Edit</a>
                                <form
                                        method="POST"
                                        action="/student/{{StudentID}}?_method=DELETE"
                                        class="d-inline"
                                        onsubmit="return confirm('Delete student #{{StudentID}}?');"
                                >
                                    <button class="btn btn-sm btn-outline-danger">Delete</button>
                                </form>
                            </td>
                        </tr>
                    {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{{/if}}