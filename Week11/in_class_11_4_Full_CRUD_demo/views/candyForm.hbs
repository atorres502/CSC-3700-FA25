<div class="mb-3">
    <a href="/" class="text-decoration-none">&larr; Back to list</a>
</div>

<div class="card shadow-sm">
    <div class="card-body">
        <h1 class="h4 mb-3">{{title}}</h1>

        <form method="POST" action="{{action}}">
            {{!-- If you prefer hidden input instead of query param: --}}
            {{!-- <input type="hidden" name="_method" value="{{#ifEquals mode "edit"}}PUT{{else}}POST{{/ifEquals}}"> --}}

            <div class="mb-3">
                <label class="form-label">Item</label>
                <input name="item" class="form-control" value="{{candy.item}}" required>
            </div>

            <div class="mb-3">
                <label class="form-label">Count</label>
                <input name="count" type="number" class="form-control" value="{{candy.count}}" min="0" required>
            </div>

            <div class="mb-3">
                <label class="form-label">Cost</label>
                <input name="cost" type="number" step="0.01" class="form-control" value="{{candy.cost}}" min="0" required>
            </div>

            <div class="mb-3">
                <label class="form-label">Total (varchar)</label>
                <input name="totalValue" class="form-control" value="{{candy.totalValue}}">
                    <div class="form-text">Optional; demonstrates stored varchar vs computed total.</div>
            </div>

            <button class="btn btn-primary">{{submitLabel}}</button>
            <a href="/" class="btn btn-outline-secondary">Cancel</a>
        </form>
    </div>
</div>
