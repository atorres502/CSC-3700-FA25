<div class="d-flex justify-content-between align-items-center mb-3">
    <a href="/" class="text-decoration-none">&larr; Back to list</a>
    <div>
        <a class="btn btn-sm btn-outline-primary" href="/candy/{{candy.id}}/edit">Edit</a>
        <form method="POST" action="/candy/{{candy.id}}?_method=DELETE" class="d-inline"
              onsubmit="return confirm('Delete candy #{{candy.id}}?');">
            <button class="btn btn-sm btn-outline-danger">Delete</button>
        </form>
    </div>
</div>

<div class="card shadow-sm">
    <div class="card-body">
        <h1 class="h4 mb-3">Candy #{{candy.id}} â€” {{candy.item}}</h1>
        <dl class="row">
            <dt class="col-sm-3">Item</dt>
            <dd class="col-sm-9">{{candy.item}}</dd>

            <dt class="col-sm-3">Count</dt>
            <dd class="col-sm-9">{{candy.count}}</dd>

            <dt class="col-sm-3">Cost</dt>
            <dd class="col-sm-9">${{candy.cost}}</dd>

            <dt class="col-sm-3">Total (varchar)</dt>
            <dd class="col-sm-9">{{candy.totalValue}}</dd>

            <dt class="col-sm-3">Computed Total</dt>
            <dd class="col-sm-9">${{candy.computedTotal}}</dd>
        </dl>
    </div>
</div>
