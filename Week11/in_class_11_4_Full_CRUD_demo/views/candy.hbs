<div class="d-flex align-items-center justify-content-between mb-3">
    <h1 class="h3 m-0">Candy Inventory</h1>
    <a href="/candy/new" class="btn btn-primary">Add Candy</a>
</div>
<div class="card shadow-sm">
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-striped table-hover align-middle m-0">
                <thead class="table-light">
                <tr>
                    <th>ID</th>
                    <th>Item</th>
                    <th class="text-end">Count</th>
                    <th class="text-end">Cost</th>
                    <th class="text-end">Total (varchar)</th>
                    <th class="text-end">Computed Total</th>
                    <th class="text-center">Actions</th>
                </tr>
                </thead>
                <tbody>
                {{#each candies}}
                    <tr>
                        <td>{{id}}</td>
                        <td class="fw-medium">
                            <a href="/candy/{{id}}" class="text-decoration-none">{{item}}</a>
                        </td>
                        <td class="text-end">{{count}}</td>
                        <td class="text-end">${{cost}}</td>
                        <td class="text-end">{{totalValue}}</td>
                        <td class="text-end">${{computedTotal}}</td>
                        <td class="text-center">
                            <a href="/candy/{{id}}/edit" class="btn btn-sm btn-outline-primary me-1">Edit</a>
                            <form
                                    method="POST"
                                    action="/candy/{{id}}?_method=DELETE"
                                    class="d-inline"
                                    onsubmit="return confirm('Delete candy #{{id}}?');"
                            >
                                <button class="btn btn-sm btn-outline-danger">Delete</button>
                            </form>
                        </td>
                    </tr>
                {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>
